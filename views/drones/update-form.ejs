<h2>Update the drone</h2>
<form action="/drones/<%= drone.id %>/edit" method="POST">
    <label>
      Name
      <input type="text" name="name" value="<%= drone.name %>" />
    </label>
  
    <label>
        Propellers:
      <input type="text" name="propellers" value="<%= drone.propellers %>" />
    </label>
  
    <label>
        maxSpeed:
      <textarea name="maxSpeed" cols="30" rows="4"><%= drone.maxSpeed %></textarea>
    </label>
  
    <button type="submit">Update</button>
  </form>
